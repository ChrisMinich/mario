<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="mario" class="com.chris.mario.Mario">
        <property name="consolePrinter" ref="consolePrinter"/>
        <property name="filePrinter" ref="filePrinter"/>
    </bean>

    <bean id="consolePrinter" class="com.chris.mario.ConsolePrinter"/>

    <bean id="filePrinter" class="com.chris.mario.FilePrinter" />


</beans>